                        <option disabled selected>Defesa</option>
                        @foreach (Topico TopicoDefesa in TopicDefesa)
                        {
                            <option value="@TopicoDefesa.id">@TopicoDefesa.descricao</option>
                        }
                    </select>
                </label>

